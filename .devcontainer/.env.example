# ========================================
# REMS Development Container Environment
# ========================================
# Copy this file to .env and update with your actual values
# cp .env.example .env

# PostgreSQL Database Configuration
POSTGRES_DB=rems
POSTGRES_USER=rems_user
POSTGRES_PASSWORD=change_me_dev_password
POSTGRES_PORT=5432

# Database Connection (for applications)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rems
DB_USER=rems_user
DB_PASSWORD=change_me_dev_password
DB_SCHEMA=rems

# Development Container Configuration
COMPOSE_PROJECT_NAME=rems-dev
POSTGRES_VERSION=15-alpine

# Network Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000
DB_EXTERNAL_PORT=5432

# Development Tools
ENABLE_PGADMIN=true
PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@rems.local
PGADMIN_PASSWORD=change_me_pgadmin_password

# Volume Configuration
POSTGRES_DATA_PATH=./postgres-data
UPLOAD_PATH=./uploads