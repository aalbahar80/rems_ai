# ========================================
# REMS Backend Environment Configuration
# ========================================
# Copy this file to .env and update with your actual values
# cp .env.example .env

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=rems
DB_USER=rems_user
DB_PASSWORD=change_me_secure_password
DB_SCHEMA=rems

# Server Configuration
NODE_ENV=development
PORT=3001

# Security Configuration
JWT_SECRET=generate_a_secure_random_jwt_secret_key_here
JWT_EXPIRE=24h
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications - optional)
SMTP_HOST=your_smtp_server.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
SMTP_FROM_NAME=REMS System
SMTP_FROM_EMAIL=noreply@yourdomain.com

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration (if using sessions)
SESSION_SECRET=generate_a_secure_session_secret_here
SESSION_MAX_AGE=86400000