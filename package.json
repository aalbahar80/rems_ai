{
  "name": "rems-development-environment",
  "version": "1.0.0",
  "description": "Real Estate Management System - Development Environment",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm start",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "setup": "npm run install:all && npm run prepare",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "npm run clean:modules && npm run clean:logs",
    "clean:modules": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "clean:logs": "find . -name '*.log' -type f -delete",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\" --ignore-path .gitignore",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:watch": "cd backend && npm run test:watch",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aalbahar80/rems.git"
  },
  "keywords": [
    "real-estate",
    "property-management",
    "nodejs",
    "postgresql",
    "docker",
    "fullstack"
  ],
  "author": {
    "name": "Abdullah Albahar",
    "email": "info@aalbahar.com"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "8.2.0",
    "supertest": "^7.1.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
